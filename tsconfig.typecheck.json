{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "es2020",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}